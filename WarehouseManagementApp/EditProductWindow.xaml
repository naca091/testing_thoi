<Window x:Class="WarehouseManagementApp.EditProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Product" Height="400" Width="350">
    <Grid>
        <StackPanel Margin="10">
            <Label Content="Product Code:" />
            <TextBox x:Name="ProductCodeTextBox" IsReadOnly="True" />

            <Label Content="Name:" />
            <TextBox x:Name="NameTextBox" />

            <Label Content="Quantity:" />
            <TextBox x:Name="QuantityTextBox" />

            <Label Content="Status:" />
            <ComboBox x:Name="StatusComboBox">
                <ComboBoxItem Content="Active" Tag="1"/>
                <ComboBoxItem Content="Inactive" Tag="0"/>
            </ComboBox>

            <Label Content="Category:" />
            <ComboBox x:Name="CategoryComboBox" />

            <Label Content="Storage Area:" />
            <ComboBox x:Name="StorageAreaComboBox" />

            <Button Content="Save" Click="SaveButton_Click" Margin="0,10,0,0"/>
            <Button Content="Cancel" Click="CancelButton_Click" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>

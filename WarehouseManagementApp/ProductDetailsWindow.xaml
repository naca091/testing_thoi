<Window x:Class="WarehouseManagementApp.ProductDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Product Details" Height="400" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Product Code:" />
            <TextBox x:Name="ProductCodeTextBox" IsReadOnly="True" />

            <TextBlock Text="Product Name:" />
            <TextBox x:Name="NameTextBox" IsReadOnly="True" />

            <TextBlock Text="Quantity:" />
            <TextBox x:Name="QuantityTextBox" IsReadOnly="True" />

            <TextBlock Text="Category:" />
            <TextBox x:Name="CategoryTextBox" IsReadOnly="True" />

            <TextBlock Text="Storage Area:" />
            <TextBox x:Name="StorageAreaTextBox" IsReadOnly="True" />

            <TextBlock Text="Status:" />
            <TextBox x:Name="StatusTextBox" IsReadOnly="True" />

            <Button Content="Close" Click="CloseButton_Click" Margin="0,10,0,0" />
        </StackPanel>
    </Grid>
</Window>

<Window x:Class="WarehouseManagementApp.EditCategoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Category" Height="200" Width="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Category Code:" Grid.Row="0" VerticalAlignment="Center"/>
        <TextBox x:Name="CategoryCodeTextBox" Grid.Row="0" Margin="120,0,0,10" IsReadOnly="True"/>

        <TextBlock Text="Category Name:" Grid.Row="1" VerticalAlignment="Center"/>
        <TextBox x:Name="CategoryNameTextBox" Grid.Row="1" Margin="120,0,0,10"/>

        <Button Content="Save Changes" Grid.Row="2" Width="120" HorizontalAlignment="Right"
                Click="SaveChanges_Click" Margin="0,10,0,0"/>
    </Grid>
</Window>
